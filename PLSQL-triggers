SQL>  create table library(bookid int,bname varchar(20),author varchar(20),publisher varchar(20),price float , pdate date);

Table created.


INPUT:
STATEMENT TRIGGER:
create or replace trigger statement
before update or delete or insert on lib
for each row 
begin
if rtrim(upper(to_char(sysdate,'day','nls_date_language=english')))='FRIDAY' then 
raise_application_error(-20001,'operation not allowed on friday');
end if;
end;
/
OUTPUT:

